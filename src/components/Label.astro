---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<span class="section-label">{label}</span>

<style>
  .section-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin-block-end: 8px;
  }
</style>
