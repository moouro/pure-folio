---
import Layout from "../layouts/Layout.astro";
---

<Layout title="page not found">
  <div class="not-found">
    <h1>404 - Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    <a href="/" aria-label="Go back to Home"> Go back to Home </a>
  </div>
</Layout>

<style>
  .not-found {
    text-align: center;
    margin-top: 100px;
  }

  .not-found h1 {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .not-found p {
    font-size: 1.25rem;
    margin-bottom: 30px;
  }

  .not-found a {
    display: inline-block;
    padding: 10px 20px;
    background-color: var(--foreground);
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .not-found a:hover {
    background-color: #333;
  }
</style>
